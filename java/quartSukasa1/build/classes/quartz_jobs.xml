<?xml version="1.0" encoding="UTF-8"?>

<quartz xmlns="http://www.opensymphony.com/quartz/JobSchedulingData"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.opensymphony.com/quartz/JobSchedulingData
                      http://www.opensymphony.com/quartz/xml/job_scheduling_data_1_5.xsd"
    version="1.5">
    
    <job>
        <job-detail>
            <name>quartzSukasaJob1</name>
            <group>SukasaGroup1</group>
            <description>SukasaJob1</description>
            <job-class>com.sukasa.quartz.QuartzJob1</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>QuartzExampleTrigger1</name>
                <group>ExampleTriggerGroup1</group>
                <job-name>quartzSukasaJob1</job-name>
                <job-group>SukasaGroup1</job-group>
               <!-- Se dispara cada 10 segundos
                <cron-expression>0 40 10 * * ? </cron-expression> -->
                <!-- cada dia a la 1 am 
				<cron-expression>0 0 13 * *  ?</cron-expression> 
				<cron-expression>0/10 * * * *  ?</cron-expression>
				<cron-expression>0 0/20 * * * ?</cron-expression>
                <cron-expression>0 25 14 * * ? </cron-expression>
                <cron-expression>0/10 * * * *  ?</cron-expression>
                <cron-expression>0 0/40 * * * ?</cron-expression>-->
                <cron-expression>0 0 11 * * ? </cron-expression>
            </cron>
        </trigger>
    </job>
</quartz>
